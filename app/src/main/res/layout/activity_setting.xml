<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_FFE8E8E8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/c_FF10BBE6">

            <ImageButton
                android:id="@+id/iv_back"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@null"
                android:src="@mipmap/while_back_left_arrow"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#ffffff"
                android:textSize="17dp"
                android:text="设置"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:background="@color/c_FFFFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="助眠模式"/>

            <com.music.maowo.view.SwitchButtonNew
                android:id="@+id/sleep_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="-1dp"
            android:background="#dcdcdc"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:gravity="center_vertical"
            android:background="@color/c_FFFFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="摇一摇切换"/>

            <com.music.maowo.view.SwitchButtonNew
                android:id="@+id/shake_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="-1dp"
            android:background="#dcdcdc"/>

        <RelativeLayout
            android:id="@+id/iv_feedback"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:background="@color/c_FFFFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="意见反馈"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/home_fragment_right_gray_arrow"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/iv_clear_cache"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:layout_marginTop="10dp"
            android:background="@color/c_FFFFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="清除缓存"/>

            <TextView
                android:id="@+id/iv_cache_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text=""
                android:layout_centerVertical="true"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/home_fragment_right_gray_arrow"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="-1dp"
            android:background="#dcdcdc"/>

        <RelativeLayout
            android:id="@+id/iv_upgrade"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:background="@color/c_FFFFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="升级检测"/>

            <TextView
                android:id="@+id/iv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="V1.0"
                android:layout_centerVertical="true"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/home_fragment_right_gray_arrow"/>

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/clear_view"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:text="正在清除中，请稍候..."
        android:textColor="@color/c_FFFFFFFF"
        android:textSize="@dimen/text_16_dm"
        android:gravity="center"
        android:visibility="gone"
        android:background="@drawable/clear_cache_bg"/>

</RelativeLayout>