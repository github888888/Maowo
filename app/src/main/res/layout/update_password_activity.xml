<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/c_FF10BBE6">

        <TextView
            android:id="@+id/tv_tttle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改密码"
            android:textColor="@color/c_FFFFFFFF"
            android:textSize="17sp" />

        <ImageButton
            android:id="@+id/iv_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:scaleType="center"
            android:background="@null"
            android:src="@mipmap/while_back_left_arrow" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:drawableLeft="@mipmap/auth_code_normal"
                android:layout_marginTop="10dp"
                android:drawablePadding="5dp"
                android:textSize="13dp"
                android:textColor="@color/c_FF999999"
                android:text="输入验证码"/>

            <View
                android:id="@+id/footerView"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/c_FF999999"/>

            <EditText
                android:id="@+id/auth_code_ext"
                android:layout_above="@+id/footerView"
                android:layout_below="@+id/text1"
                android:layout_toLeftOf="@+id/show_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:layout_marginTop="10dp"
                android:maxLength="11"
                android:hint=""
                android:text=""/>

            <ImageButton
                android:id="@+id/show_password"
                android:layout_above="@+id/footerView"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:background="@mipmap/delete_img"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:drawableLeft="@mipmap/password_img"
                android:layout_marginTop="10dp"
                android:drawablePadding="5dp"
                android:textSize="13dp"
                android:textColor="@color/c_FF999999"
                android:hint="请输入密码"
                android:text=""/>

            <View
                android:id="@+id/footerView1"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/c_FF999999"/>

            <EditText
                android:id="@+id/password_ext"
                android:layout_above="@+id/footerView1"
                android:layout_below="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/delete_btn"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="2dp"
                android:background="@null"
                android:layout_marginTop="10dp"
                android:maxLength="11"
                android:text="133333333"/>

            <ImageButton
                android:id="@+id/delete_btn"
                android:layout_above="@+id/footerView1"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:background="@mipmap/show_password_img"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp">

            <EditText
                android:id="@+id/password_again_ext"
                android:layout_above="@+id/footerView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:drawableLeft="@mipmap/password_img"
                android:drawablePadding="5dp"
                android:background="@null"
                android:maxLength="11"
                android:hint="请再次输入密码"
                android:text=""/>

            <View
                android:id="@+id/footerView2"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/c_FF999999"/>

        </RelativeLayout>

        <Button
            android:id="@+id/ok_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="确认"
            android:textSize="17dp"
            android:gravity="center"
            android:textColor="@color/c_FFFFFFFF"
            android:background="@mipmap/next_normal"/>

    </LinearLayout>

</LinearLayout>