<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_FFF5F5F5">

    <View
        android:id="@+id/v_blue_background"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/c_FF10BBE6"/>

    <View
        android:id="@+id/v_horizontal"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="44dp"
        android:background="@color/c_FF0FBIDA"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="个人中心"
        android:textColor="@color/c_FFFFFFFF"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/iv_user_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="11dp"
        android:layout_marginRight="15dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/mine_fragment_setting_icon" />
    <com.music.maowo.view.CircleImageView
        android:id="@+id/civ_header"
        android:layout_below="@id/v_horizontal"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/c_FFFFFFFF"
        android:textSize="17sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/civ_header"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tv_user_edit"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="编辑个人资料"
        android:textColor="@color/c_B3FFFFFF"
        android:background="@drawable/mine_fragment_user_edit_shape"
        android:textSize="12sp"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:drawableLeft="@mipmap/mine_fragment_edit_icon"
        android:drawablePadding="15dp"
        android:layout_below="@+id/tv_user_name"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_below="@id/v_blue_background"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/tv_submit_article"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="提交的文章"
            android:textColor="@color/c_FFFFFFFF"
            android:textSize="17sp" />

        <View
            android:layout_width="1px"
            android:layout_height="23dp"
            android:background="@color/c_FF53BFDA"/>

        <TextView
            android:id="@+id/tv_publish_topic"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="发表的帖子"
            android:textColor="@color/c_FFFFFFFF"
            android:textSize="17sp" />

        <View
            android:layout_width="1px"
            android:layout_height="23dp"
            android:background="@color/c_FF53BFDA"/>

        <TextView
            android:id="@+id/tv_join_topic"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="参与的帖子"
            android:textColor="@color/c_FFFFFFFF"
            android:textSize="17sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_mine_reply"
        android:layout_below="@id/ll_container"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/c_FFFFFFFF"
        android:gravity="center_vertical"
        android:textSize="15dp"
        android:text="我的回复"
        android:textColor="@color/c_FF333333"
        android:drawableLeft="@mipmap/mine_fragment_reply_icon"
        android:drawablePadding="10dp"
        android:drawableRight="@mipmap/home_fragment_right_gray_arrow"/>

    <View
        android:id="@+id/v_horizontal_1"
        android:layout_below="@id/tv_mine_reply"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/c_FFE8E8E8"/>

    <TextView
        android:id="@+id/tv_mine_private_letter"
        android:layout_below="@id/v_horizontal_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/c_FFFFFFFF"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="我的私信"
        android:textSize="15dp"
        android:textColor="@color/c_FF333333"
        android:drawableLeft="@mipmap/mine_fragment_private_letter"
        android:drawablePadding="10dp"
        android:drawableRight="@mipmap/home_fragment_right_gray_arrow"/>

    <View
        android:id="@+id/v_horizontal_2"
        android:layout_below="@id/tv_mine_private_letter"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/c_FFE8E8E8"/>

    <TextView
        android:id="@+id/tv_mine_collection"
        android:layout_below="@id/v_horizontal_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/c_FFFFFFFF"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="我的收藏"
        android:textSize="15dp"
        android:textColor="@color/c_FF333333"
        android:drawableLeft="@mipmap/mine_fragment_collection_icon"
        android:drawablePadding="10dp"
        android:drawableRight="@mipmap/home_fragment_right_gray_arrow"/>

    <TextView
        android:id="@+id/tv_mine_system_message"
        android:layout_below="@id/tv_mine_collection"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/c_FFFFFFFF"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="系统消息"
        android:textSize="15dp"
        android:textColor="@color/c_FF333333"
        android:drawableLeft="@mipmap/mine_fragment_system_message"
        android:drawablePadding="10dp"
        android:drawableRight="@mipmap/home_fragment_right_gray_arrow"/>
</RelativeLayout>