<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_FFFFFFFF"
    android:padding="10dp">

    <com.music.maowo.view.CircleImageView
        android:id="@+id/civ_author_other_show"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp" />

    <com.music.maowo.view.CircleImageView
        android:id="@+id/civ_author_mine_show"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/tv_chat_content"
        android:layout_toRightOf="@id/civ_author_other_show"
        android:layout_toLeftOf="@id/civ_author_mine_show"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:includeFontPadding="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:padding="10dp"
        android:text="2017-09-08"
        android:textColor="@color/c_FF999999"
        android:textSize="15sp" />
</RelativeLayout>