<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        app:indicator_drawable_selected="@color/c_FF10BBE6"/>

    <View
        android:layout_below="@id/banner"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/c_FFFFFFFF" />

    <TextView
        android:layout_below="@id/banner"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="#FFFFFFFF"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/home_fragment_left_indicator_shape"
        android:drawableRight="@mipmap/home_fragment_right_gray_arrow"
        android:drawablePadding="10dp"
        android:textSize="15sp"
        android:textColor="#FF333333"
        android:textStyle="bold"
        android:text="情感杂谈"
        android:id="@+id/textView" />
</RelativeLayout>