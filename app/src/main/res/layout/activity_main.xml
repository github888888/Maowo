<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:fitsSystemWindows="true"
    android:clipChildren="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/ll_main_activity_bottom_type_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/c_FFFFFFFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_mainactivity_home"
            android:text="首页"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:paddingTop="10dp"
            android:drawableTop="@drawable/mainactivity_tab_home_selector"
            android:textColor="@drawable/mainactivity_tab_textcolor_selector"
            android:gravity="center_horizontal"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_mainactivity_category"
            android:text="分类"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:paddingTop="10dp"
            android:drawableTop="@drawable/mainactivity_tab_category_selector"
            android:textColor="@drawable/mainactivity_tab_textcolor_selector"
            android:gravity="center_horizontal"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_mainactivity_mine"
            android:text="我的"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:paddingTop="10dp"
            android:drawableTop="@drawable/mainactivity_tab_mine_selector"
            android:textColor="@drawable/mainactivity_tab_textcolor_selector"
            android:gravity="center_horizontal"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:id="@+id/div_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_above="@id/ll_main_activity_bottom_type_container"
        android:background="@color/c_FF333333" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_mainactivity_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/div_tab_bar" />

</RelativeLayout>
